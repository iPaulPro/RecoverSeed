{
  "name": "Recover Seed",
  "description": "Recover your BitClout seed phrase",
  "version": "1.1.0",
  "manifest_version": 3,
  "author": "Paul Burke",
  "content_scripts": [
    {
      "matches": [
        "https://bitclout.com/*",
        "https://diamondapp.com/*",
        "https://node.deso.org/*"
      ],
      "js": [
        "main.js"
      ]
    },
    {
      "matches": [
        "https://identity.bitclout.com/*",
        "https://identity.deso.org/*"
      ],
      "all_frames": true,
      "js": [
        "identity.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
